<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImagenCompras"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloCompras"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Nombre"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/tvCantidadCompras"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:hint="Cantidad"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvPrecioCompras"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:hint="Precio" />

        <Button
            android:id="@+id/bEliminar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Eliminar del Carrito de Compra"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="8sp"
            android:textStyle="bold"
            tools:text="Eliminar del Carrito de Compra" />

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>